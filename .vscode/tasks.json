{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Task",
            "dependsOn": [
                "Terminate All Tasks",
                "Copy Assets",
                "Build Lib",
                "Build Client",
                "Build Server",
                "Run Both"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Run Both",
            "dependsOn": [
                "Run Server",
                "Run Client",
                "Run Client",
                "Run Client"
            ],
            "dependsOrder": "parallel"
        },
        {
            "label": "Run Client",
            "command": "dos-client.exe",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/target/release/",
                "env": {
                    "RUST_BACKTRACE": "1",
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
        },
        {
            "label": "Run Server",
            "command": "dos-server.exe",
            "group": "test",
            "args": [
                "127.0.0.1",
                "3333"
            ],
            "options": {
                "cwd": "${workspaceFolder}/target/release",
                "env": {
                    "RUST_BACKTRACE": "1",
                }
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
        },
        {
            "label": "Build Lib",
            "type": "shell",
            "command": "cargo build --release -p dos-shared",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Client",
            "type": "shell",
            "command": "cargo build --release -p dos-client",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Server",
            "type": "shell",
            "command": "cargo build --release -p dos-server",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Copy Assets",
            "type": "shell",
            "command": "xcopy '${workspaceFolder}\\client\\assets\\' '${workspaceFolder}\\target\\release\\assets\\' /Y /I",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Terminate All Tasks",
            "command": "${command:workbench.action.terminal.killAll}",
            "type": "shell",
            "problemMatcher": [],
        }
    ]
}